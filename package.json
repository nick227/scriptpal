{
  "name": "scriptpal-root",
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "server"
  ],
  "scripts": {
    "dev": "concurrently -k -n client,server \"vite\" \"npm run dev --prefix server\"",
    "dev:client": "vite",
    "dev:server": "npm run dev --prefix server",
    "start": "npm run start --prefix server",
    "build": "npm run build --prefix server && vite build",
    "preview": "vite preview",
    "test:frontend": "jest --config public/jest.config.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.39.2",
    "babel-jest": "^30.1.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jest": "^30.1.3",
    "knip": "^5.82.1",
    "vite": "^6.2.0"
  },
  "dependencies": {
    "mysql2": "^3.16.1"
  }
}
